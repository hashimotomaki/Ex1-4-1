<table class="table">
	<tr><%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %></tr>

	<tr>
		<th>name</th>
		<th><%= user.name %></th>
	</tr>

	<tr>
		<th>introduction</th>
		<th><%= user.introduction %></th>
	</tr>
	<tr>
		<th>follows</th>
		<th><%= link_to "#{user.follower.count}", follows_path(user), class: "nav-link" %></th>
	</tr>
  <tr>
  	<th>followers</th>
  	<th><%= link_to "#{user.followed.count}", followers_path(user), class: "nav-link" %></th>
  </tr>
  <div class="row">
		<tr>
			<%if user != current_user %>
			<th>
				<% if current_user.following_by?(user)  %>
	        <%= link_to 'フォロー外す', unfollow_path(user.id),method: :POST, class: "btn btn-success unfollow_#{user.id}" %>
	      <% else %>
	        <%= link_to 'フォローする', follow_path(user.id),method: :POST, class: "btn btn-primary col-xs-12  follow_path#{user.id}" %>
	      <% end %>
			</th>
			<% end %>
		</tr>
	</div>
</table>

<div class="row">
	<%= link_to '', edit_user_path(user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{user.id}" %>
</div>
